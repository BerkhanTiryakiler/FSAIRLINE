@model Flight

@section Categories
{
    @await Component.InvokeAsync("Categories")
}

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.ImageUrl" class="card-img">
            </div>
            <div class="col-md-9">
                
                    <h5 class="card-title">@Model.Source</h5>
                    <h5 class="card-title">@Model.Destination</h5>
                    <p class="card-text">@Model.Airline</p>
                    <p class="card-text">
                        <small class="text-muted">3 days ago</small>
                    </p>
            
            </div>
        </div>
    </div>
</div>