@model List<BookListModel>

<h1>Books</h1>
<hr>

@foreach (var book in Model)
{
    <table class="table table-bbooked table-sm mb-3">
        <thead class="bg-primary">
            <tr>
                <td colspan="2">Book Id: #@book.BookNumber</td>
                <th>Price</th>
                <th>SeatNumber</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bookItem in book.BookItems)
            {
                <tr>
                    <td><img src="~/img/@bookItem.ImageUrl" alt="" width="50"></td>
                    <td>
                        @bookItem.Name
                    </td>
                    <td>@bookItem.Price</td>
                    <td>@bookItem.SeatNumber</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Customer Name</td>
                <td>@book.FirstName @book.LastName</td>
                <td rowspan="6">Total: @book.TotalPrice().ToString("c")</td>
            </tr>
            <tr>
                <td colspan="2">Address: </td>
                <td>@book.Address</td>
            </tr>
              <tr>
                <td colspan="2">Email: </td>
                <td>@book.Email</td>
            </tr>
              <tr>
                <td colspan="2">Phone: </td>
                <td>@book.Phone</td>
            </tr>
              <tr>
                <td colspan="2">Book Status: </td>
                <td>@book.BookState</td>
            </tr>
               <tr>
                <td colspan="2">Payment Type </td>
                <td>@book.PaymentType</td>
            </tr>
        </tfoot>
    </table>
}
